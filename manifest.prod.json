{
  "manifest_version": 3,
  "name": "My Pocket Extension",
  "version": "1.0",
  "description": "Pocket代替アプリへの記事保存拡張機能",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "host_permissions": [
    "https://your-domain.com/*"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "My Pocketに保存",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}